page{
  height: 100%;
  background-color: #f2f2f2;
}


.title{
  padding: 10rpx 30rpx 20rpx 30rpx;
  width: 100%;
  background-color: white;
}

.title-text{
  font-family: "微软雅黑";
  font-size: 40rpx;
  font-weight: 550;
  font-kerning: auto;
  color: black;
}

.title-tag{
  margin: 20rpx 0rpx 0rpx 0rpx;
  display: flex;
  flex-direction: row;
}

.title-tag-text{
  margin-left: 10rpx;
  padding: 2rpx 8rpx 2rpx 8rpx;
  border: 1px solid #48C23D;
  border-radius: 20rpx;
  font-size: 25rpx;
  color: #48C23D;
}

.hr-container{
  background-color: white;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.hr {
  height: 1px;
  background-color: #d9d9d9;
}

.service-content{
  padding-left: 30rpx;
  background-color: white;
}

.service-content-text{
  padding-top: 10rpx;
  width: 690rpx;
}

.service-content-text-text{
  font-size: 34rpx;
  color: #666;
  line-height: 60rpx;
  text-indent: 40rpx;
}

.service-content-video{
  text-align: center;
  padding-top: 20rpx;
  background-color: white;
  padding-bottom: 30rpx;
}

video{
  width: 690rpx;
  height: 450rpx;
}

.phone-container{
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-bottom: 30rpx;
  align-items: center;
}

.phone{
  width: 80rpx;
  height: 80rpx;
  padding-right: 30rpx;
  padding-top:5rpx;
}

.phone-text{
  font-size: 30rpx;
  color: #888;
}

.share{
  width: 92rpx;
  height: 92rpx;
  /* padding-right: 20rpx; */
  /* background-image:url(https://duobifuwu-1252535629.cos.ap-beijing.myqcloud.com/wuye/system/phone3.png); */
}

button{
  background-color: white;
  padding-left: 0rpx;
  width: 92rpx;
  height: 92rpx;
}

button::after {
  border: none;
}

.group{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-right: 30rpx;
}